<h1>Listing cities</h1>
<p id="notice"><%= notice %></p>
<table class="imagetable">
  <tr>
    <th>Name</th>
    <th>Country</th>
    <!-- <th></th> -->
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.name %></td>
    <td><%= Country.find_by_id(city.country_id).name %></td>
    <!--<td><%#= link_to 'Show', city %></td> -->
    <td><%= link_to 'Edit', edit_city_path(city) %></td>
    <td><%= link_to 'Delete', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

