<h1>Listing ports</h1>

<table class="imagetable">
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Country</th>
    <th></th>
    <th></th>
  </tr>

<% @ports.each do |port| %>
  <tr>
    <td><%= port.name %></td>
    <td><%= City.find_by_id(port.city_id).name %></td>
    <td><%= City.find_by_id(port.city_id).country.name %></td>
    <!--<td><%#= link_to 'Show', port %></td>-->
    <td><%= link_to 'Edit', edit_port_path(port) %></td>
    <td><%= link_to 'Delete', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

